---
import "../styles/normalize.css";
import "../styles/webflow.css";
import "../styles/camping-maestrat.webflow.css";
import "../styles/overrides.css";
import "../styles/animations.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
    data-wf-page="67ab22e0ef71725689e9dcea"
    data-wf-site="67ab22dfef71725689e9db40"
    lang="en"
>
    <head>
        <meta charset="utf-8" />
        <title>{title}</title>
        <meta
            content="Discover Maestrat Nature, a paradise in the heart of Maestrat, Castellón. Surrounded by stunning landscapes and Mediterranean nature, it’s the perfect place to disconnect, explore trails, and enjoy outdoor adventures."
            name="description"
        />
        <meta content="Camping Maestrat Nature" property="og:title" />
        <meta
            content="Discover Maestrat Nature, a paradise in the heart of Maestrat, Castellón. Surrounded by stunning landscapes and Mediterranean nature, it’s the perfect place to disconnect, explore trails, and enjoy outdoor adventures."
            property="og:description"
        />
        <meta content="/images/hero-sol.jpg" property="og:image" />
        <meta content="Camping Maestrat Nature" property="twitter:title" />
        <meta
            content="Discover Maestrat Nature, a paradise in the heart of Maestrat, Castellón. Surrounded by stunning landscapes and Mediterranean nature, it’s the perfect place to disconnect, explore trails, and enjoy outdoor adventures."
            property="twitter:description"
        />
        <meta content="/images/hero-sol.jpg" property="twitter:image" />
        <meta property="og:type" content="website" />
        <meta content="summary_large_image" name="twitter:card" />
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <meta content="Astro" name="generator" />
        <link
            href="/images/favicon.jpg"
            rel="shortcut icon"
            type="image/x-icon"
        />
        <link href="/images/webclip.jpg" rel="apple-touch-icon" />

        <link href="https://fonts.googleapis.com" rel="preconnect" />
        <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
        <script
            src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"
            type="text/javascript"></script>
        <script type="text/javascript" is:inline>
            WebFont.load({
                google: {
                    families: ["Epilogue:300,regular,500,600,700,800,900"],
                },
            });
        </script>
        <script src="/js/animations.js" defer></script>
    </head>
    <body>
        <slot />
    </body>
</html>
